        android:autoSizeTextType="uniform"
        android:fontFamily="@font/a1009_4"
        android:gravity="center_horizontal|center_vertical"
        android:text="김수빈"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginStart="16dp"
