<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@drawable/view_round_white6"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/a10092"
        android:gravity="center_horizontal"
        android:text="회원 정보"
        android:textSize="22dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/a1009_2"
        android:gravity="center"
        android:hint="이름"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/a1009_2"
        android:gravity="center"
        android:hint="상태 메시지"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/shape_no_btn"
            android:fontFamily="@font/a10092"
            android:padding="2dp"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="16dp" />

        <android.widget.Button
            android:id="@+id/conformBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_yes_btn"
            android:fontFamily="@font/a10092"
            android:text="친구 추가"
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>
