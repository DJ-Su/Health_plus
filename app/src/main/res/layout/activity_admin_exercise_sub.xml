<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminExerciseSub"
    android:background="#FFF5B3"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:srcCompat="@drawable/logo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/HealthName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/a1009_2"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="런지여"
        android:textColor="#474747"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/HealthExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/a1009_2"
        android:text="운동 설명"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HealthName"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/HealthExplanationTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a1009_2"
        android:gravity="center_horizontal|center_vertical"
        android:text="혹시라도 작업하다가 제가 만든게 이상하시면 바로 저에게 말해주세요"
        android:layout_marginTop="8dp"
        android:textColor="#8A8A8A"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/HealthExplanation"
        app:layout_constraintTop_toBottomOf="@+id/HealthExplanation" />

    <TextView
        android:id="@+id/HealthKcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/a1009_2"
        android:text="소비칼로리"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HealthExplanationTxt" />

    <TextView
        android:id="@+id/HealthKcalTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a1009_2"
        android:gravity="center_horizontal|center_vertical"
        android:text="150"
        android:layout_marginStart="26dp"
        android:textColor="#8A8A8A"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/HealthKcal"
        app:layout_constraintStart_toEndOf="@+id/HealthKcal"
        app:layout_constraintTop_toTopOf="@+id/HealthKcal" />

    <TextView
        android:id="@+id/Healthunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/a1009_2"
        android:text="단위"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HealthKcal" />

    <TextView
        android:id="@+id/HealthunitTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a1009_2"
        android:gravity="center_horizontal|center_vertical"
        android:text="150"
        android:layout_marginStart="26dp"
        android:textColor="#8A8A8A"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/Healthunit"
        app:layout_constraintStart_toEndOf="@+id/Healthunit"
        app:layout_constraintTop_toTopOf="@+id/Healthunit" />

<!--    이미지는 진짜 어떻게 하지?-->

    <ImageButton
        android:id="@+id/addBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:src="@drawable/roundsquare3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HealthunitTxt"
        android:layout_marginTop="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a10093"
        android:text="수정하기"
        android:textColor="#2E2E2E"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/addBtn"
        app:layout_constraintEnd_toEndOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="@+id/addBtn"
        app:layout_constraintTop_toTopOf="@+id/addBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>