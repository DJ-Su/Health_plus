<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_white6"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/matchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a10092"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="신고당한 사람"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/photo"
        android:layout_width="272dp"
        android:layout_height="270dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_alignStart="@+id/content"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/a10091"
        android:paddingBottom="20dp"
        android:text="20230507"
        android:textColor="#444444"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/a10092"
        android:text="귀여워"
        android:textColor="#444444"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/a10092"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="신고 사유"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="16dp"
            android:textColor="#000000"
            android:fontFamily="@font/a10092"
            android:background="@drawable/shape_no_btn"
            android:padding="2dp"/>

        <android.widget.Button
            android:id="@+id/conformBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:text="승인"
            android:textColor="#000000"
            android:textSize="16dp"

            android:fontFamily="@font/a10092"

            android:background="@drawable/shape_yes_btn"
            />

    </LinearLayout>


</LinearLayout>