<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ExerciseRecordActivity" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:srcCompat="@drawable/logo3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_action_hamburger"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageView" />

            <TextView
                android:id="@+id/month"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/a1009_3"
                android:gravity="center_horizontal|center_vertical"
                android:text="10"
                android:textColor="#2E2E2E"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a1009_3"
                android:text="월"
                android:textColor="#2E2E2E"
                android:textSize="32dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/month"
                app:layout_constraintStart_toEndOf="@+id/month"
                app:layout_constraintTop_toTopOf="@+id/month" />

            <TextView
                android:id="@+id/Day"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/a1009_3"
                android:gravity="center_horizontal|center_vertical"
                android:text="17"
                android:textColor="#2E2E2E"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView44"
                app:layout_constraintStart_toEndOf="@+id/textView44"
                app:layout_constraintTop_toTopOf="@+id/textView44" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/a1009_3"
                android:gravity="center_horizontal|center_vertical"
                android:text="일"
                android:textColor="#2E2E2E"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/Day"
                app:layout_constraintStart_toEndOf="@+id/Day"
                app:layout_constraintTop_toTopOf="@+id/Day" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFDE00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/month" />

            <TextView
                android:id="@+id/expart"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/a10092"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#323232"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <View
                android:id="@+id/view5"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:background="#00000000"
                app:layout_constraintBottom_toBottomOf="@+id/expart"
                app:layout_constraintStart_toEndOf="@+id/expart"
                app:layout_constraintTop_toTopOf="@+id/expart"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/exname"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/a10092"
                android:textColor="#323232"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintStart_toEndOf="@+id/view5"
                app:layout_constraintTop_toTopOf="@+id/view5"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="#00000000"
                android:src="@drawable/delete_xml"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/exname"
                app:layout_constraintStart_toEndOf="@+id/exname"
                app:layout_constraintTop_toTopOf="@+id/exname" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/a10091"
                android:text="총"
                android:textColor="#323232"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expart" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/a10092"
                android:text="1350"
                android:textColor="#323232"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView49"
                app:layout_constraintStart_toEndOf="@+id/textView49"
                app:layout_constraintTop_toTopOf="@+id/textView49" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a10092"
                android:text="kg"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView50"
                app:layout_constraintStart_toEndOf="@+id/textView50"
                app:layout_constraintTop_toTopOf="@+id/textView50" />


            <TextView
                android:id="@+id/timeView"
                android:layout_width="239dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="00:00:00:00"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.218"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49" />

            <ImageButton
                android:id="@+id/TimerStart"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="84dp"
                android:background="#00000000"
                android:src="@drawable/start"
                app:layout_constraintBottom_toBottomOf="@+id/timeView"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/TimerPause"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="84dp"
                android:background="#00000000"
                android:src="@drawable/pause"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/timeView"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/TimerStop"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="28dp"
                android:background="#00000000"
                android:src="@drawable/stop"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/timeView"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="32dp"

                android:fontFamily="@font/a10092"
                android:text="세트"
                android:textColor="#323232"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeView" />

            <ImageButton
                android:id="@+id/unitBtn"
                android:layout_width="57dp"
                android:layout_height="39dp"
                android:layout_marginStart="32dp"
                android:background="#00000000"
                android:src="@drawable/background_card_round_white"
                app:layout_constraintBottom_toBottomOf="@+id/textView51"
                app:layout_constraintStart_toEndOf="@+id/textView51"
                app:layout_constraintTop_toTopOf="@+id/textView51"
                app:layout_constraintVertical_bias="0.437" />

            <TextView
                android:id="@+id/unittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a10092"
                android:text="kg"
                android:textColor="#323232"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/unitBtn"
                app:layout_constraintEnd_toEndOf="@+id/unitBtn"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toEndOf="@+id/textView51"
                app:layout_constraintTop_toTopOf="@+id/unitBtn"
                app:layout_constraintVertical_bias="0.437" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/a10092"
                android:text="회"
                android:textColor="#323232"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/unittext"
                app:layout_constraintStart_toEndOf="@+id/unittext"
                app:layout_constraintTop_toTopOf="@+id/unittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a10092"
                android:text="완료"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginStart="68dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView53"
                app:layout_constraintStart_toEndOf="@+id/textView53"
                app:layout_constraintTop_toTopOf="@+id/textView53" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="413dp"
                android:layout_height="306dp"
                android:layout_marginTop="104dp"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="5dp"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="@+id/timeView"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="62dp"
                android:layout_marginBottom="30dp"
                android:background="#00000000"
                android:src="@drawable/roundsquare4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a10092"
                android:text="세트 추가"
                android:textColor="#393939"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/add"
                app:layout_constraintEnd_toEndOf="@+id/add"
                app:layout_constraintStart_toStartOf="@+id/add"
                app:layout_constraintTop_toTopOf="@+id/add" />


            <ImageButton
                android:id="@+id/Save"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="28dp"
                android:background="#00000000"
                android:src="@drawable/roundsquare4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a10092"
                android:text="세트 저장"
                android:textColor="#393939"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/Save"
                app:layout_constraintEnd_toEndOf="@+id/Save"
                app:layout_constraintStart_toStartOf="@+id/Save"
                app:layout_constraintTop_toTopOf="@+id/Save" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />
        </LinearLayout>

    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/navigationView"
        android:layout_gravity="left"
        app:menu="@menu/hamburger"
        tools:ignore="MissingConstraints" />

</androidx.drawerlayout.widget.DrawerLayout>
